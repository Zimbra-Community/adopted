<zimlet name="com_zimbra_attachmentalert" version="1.6"
	 label="${msg.label}"
	 description="${msg.description}" target="main compose-window">
	 <include>attachmentalert.js</include>
	 <includeCSS>attachmentalert.css</includeCSS>
	 <resource>attachmentalert-icon.gif</resource>
	 <handlerObject>com_zimbra_attachalert_HandlerObject</handlerObject>

	 <zimletPanelItem label="${msg.AttachmentAlert_panel_label}" icon="Attachment">
	  	<toolTipText>${msg.AttachmentAlert_panel_tooltip}</toolTipText>
	 </zimletPanelItem>

	 <userProperties>
	  	<property type="string" name="turnONAttachmentAlertZimletNew" value="true"/>
	 </userProperties>
</zimlet>
